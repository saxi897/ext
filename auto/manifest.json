{
  "manifest_version": 3,
  "name": "TXTNovel Auto",
  "version": "3.0",
  "description": "Auto comment, auto download, dá»‹ch.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "downloads",
    "storage"
  ],
  "icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"126": "icon126.png"
	},
  "host_permissions": [
    "*://*.txtnovel.vip/*",
	"*://translate.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
	"default_icon": {
		"16": "icon16.png",
		"32": "icon32.png",
		"126": "icon126.png"
	}
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.txtnovel.vip/forum-*",
        "*://*.txtnovel.vip/forum.php?mod=forumdisplay&fid=*"
      ],
      "js": ["content_list.js"]
    },
    {
      "matches": ["*://*.txtnovel.vip/*"],
      "js": ["content_thread.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
	  "content_thread.js",
	  "qt.js",
	  "laongu.js",
	  "ChinesePhienAmWords.txt",
	  "Names.txt",
	  "VietPhrase.txt"
	  ],
      "matches": ["<all_urls>"]
    }
  ]
}